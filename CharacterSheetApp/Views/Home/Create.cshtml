<!DOCTYPE html>
<html>

	<head>
	<meta charset="utf-8">
	</head>

	<body>

		@model List<CharacterSheetApp.Models.Character>

		<h2>Create</h2>
		<hr/>

		<form asp-action="Create" asp-controller="Home">
			<div class="form-horizontal">
				<h4>Character</h4>
				<hr/>
				<div class="form-group">
					<div class="row">

						<!-- the asp-for tag helper will set the label's value to be the name of the property -->
						<label class="control-label col-md-2" asp-for="Name"></label>
						<div class="col-md-10">

							<!-- here, asp-for will set the input tag's type, id, and name attributes -->
							<input class="form-control" asp-for="Name" />

						<!-- for properties that are more than one word, we need to define a display property in the Model. -->
						<!-- <label class="control-label col-md-2" asp-for="IsActive"></label>
						<div class="col-md-10">
							<input class="form-control" asp-for="IsActive" />
						</div> -->
					</div>
				</div>
			</div>
		</form>

	</body>
</html>