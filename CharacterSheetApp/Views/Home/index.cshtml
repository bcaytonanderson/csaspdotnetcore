<!DOCTYPE html>
<html>

	<head>
	<meta charset="utf-8">

	</head>


	<body>

		@model List<CharacterSheetApp.Models.Character>

		<h1>
			Characters
		</h1>

		<p>
			<!-- linking to the Create method -->
			<a asp-action="Create" asp-controller="Home">Create new character</a>
		</p>

		<ul>
			@foreach(var item in Model)
			{
				<li>
					<!-- linking to the Details method; since the method is expecting an input parameter we can pass that information along using the asp-route-name tag helper -->
					<a asp-action="Details" asp-controller="Home" asp-route-name="@item.Name">
						@item.Name
					</a>
				</li>
			}
		</ul>
		</div>

	</body>

</html>